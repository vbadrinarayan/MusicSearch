<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.music.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.activity.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".authentication.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".music.activity.MusicSearchActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".music.activity.MusicSearchResultsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".music.activity.MusicSearchDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>